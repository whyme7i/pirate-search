<script>
  const searchBtn = document.getElementById('searchBtn');
  const searchInput = document.getElementById('searchInput');
  const resultsDiv = document.getElementById('results');
  const popupFake = document.getElementById('popupFake');
  const verifyBtn = document.getElementById('verifyBtn');

  searchBtn.addEventListener('click', () => {
    const query = searchInput.value.trim();
    if (!query) return alert('Type something to search.');
    
    resultsDiv.innerHTML = `<p>Searching for "${query}" mods...</p>`;
    
    // Fake search results to simulate real site
    setTimeout(() => {
      resultsDiv.innerHTML = `
        <h3>Results for "${query}":</h3>
        <ul>
          <li><a href="#" class="download-link" data-url="https://shrinkearn.com/stXXXX1">Mod APK 1 for ${query}</a></li>
          <li><a href="#" class="download-link" data-url="https://shrinkearn.com/stXXXX2">Mod APK 2 for ${query}</a></li>
          <li><a href="#" class="download-link" data-url="https://shrinkearn.com/stXXXX3">Mod APK 3 for ${query}</a></li>
        </ul>
      `;
      popupFake.style.display = 'none';
      attachLinks();
    }, 1500);
  });

  function attachLinks() {
    const links = document.querySelectorAll('.download-link');
    links.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        popupFake.style.display = 'block';
        verifyBtn.dataset.url = e.target.dataset.url;
      });
    });
  }

  verifyBtn.addEventListener('click', () => {
    const url = verifyBtn.dataset.url;
    if (url) {
      window.open(url, '_blank');
      popupFake.style.display = 'none';
    }
  });
</script>
